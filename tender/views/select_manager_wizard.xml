<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_select_manager_wizard_form" model="ir.ui.view">
        <field name="name">select.manager.wizard.form</field>
        <field name="model">tender.select_manager.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Manager for Approval">
                <group>
                    <field name="manager_id"/>
                </group>
                <footer>
                    <button name="action_send_approval_email" type="object" string="Send Approval Email" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_select_manager_wizard" model="ir.actions.act_window">
        <field name="name">Select Manager for Approval</field>
        <field name="res_model">tender.select_manager.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_select_manager_wizard_form"/>
    </record>
</odoo>
